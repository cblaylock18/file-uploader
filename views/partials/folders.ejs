<% if (locals.folders) {%>
<ul class="folders">
    <% folders.forEach((folder) => { %>
    <li>
        <a href="/file-uploader/main/<%=folder.id%>"><%= folder.name %></a>
        <a href="/file-uploader/update-folder/<%=folder.id%>">Update</a>
        <form
            action="/file-uploader/delete-folder/<%=folder.id%>/<%=folder.parentId%>"
            method="post"
        >
            <button
                type="submit"
                onclick="return confirm('Are you 100% sure you want to delete this folder and ALL of its contents?')"
            >
                Delete Folder and All Contents?
            </button>
        </form>
        <%if(folder.children) {%>
        <p><%=folder.children.length%></p>
        <%}%>
    </li>
    <% }); %>
</ul>
<%}%>
